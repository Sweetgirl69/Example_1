<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:controller="sample.Controller" fx:id="id" xmlns:fx="http://javafx.com/fxml">
    <VBox  layoutX="243" layoutY="20" alignment="CENTER" styleClass="vbox">
    <VBox alignment="CENTER">
        <Label text="new player:" styleClass="scoreClass"/>
        <Text  text="Text" fx:id="scoreValue" styleClass="scoreClass"/>
    </VBox>
    </VBox>

    <children>
        <!-- Таблица в которую мы будем выводит наш pojo -->
        <TableView fx:id="tableUsers" layoutX="12.0" layoutY="62.0" prefHeight="324.0" prefWidth="600.0">
            <columns>
                <!-- Колонки таблицы -->
                <TableColumn prefWidth="80.0" text="№" fx:id="idColumn" />
                <TableColumn prefWidth="150.0" text="Login" fx:id="loginColumn" />
                <TableColumn prefWidth="150.0" text="Score" fx:id="scoreColumn" />
                <TableColumn prefWidth="220.0" text="linesClear" fx:id="linesClearedColumn" />
            </columns>
        </TableView>
        <Label layoutX="14.0" layoutY="18.0" text="List all users:">
            <font>
                <Font name="Verdana" size="24.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
